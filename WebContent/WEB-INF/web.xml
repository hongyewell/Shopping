<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Shopping</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
   <!-- 添加用户 -->
  <servlet>
  	<servlet-name>addUser</servlet-name>
  	<servlet-class>com.shopping.controller.UserRegisterController</servlet-class>
  </servlet>
 <servlet-mapping>
    <servlet-name>addUser</servlet-name>
    <url-pattern>/addUser</url-pattern>
  </servlet-mapping>
  
  <!-- 用户登录 -->
    <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.shopping.controller.LoginController</servlet-class>
  </servlet>
 <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- 商品列表 -->
    <servlet>
  	<servlet-name>products</servlet-name>
  	<servlet-class>com.shopping.controller.ProductListController</servlet-class>
  </servlet>
 <servlet-mapping>
    <servlet-name>products</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  
  <!-- 商品详情 -->
  <servlet>
  	<servlet-name>productDetail</servlet-name>
  	<servlet-class>com.shopping.controller.ProductDetailController</servlet-class>
  </servlet>
 <servlet-mapping>
    <servlet-name>productDetail</servlet-name>
    <url-pattern>/productDetail</url-pattern>
  </servlet-mapping>
  
    <!-- 最近浏览 -->
  <servlet>
  	<servlet-name>ViewList</servlet-name>
  	<servlet-class>com.shopping.controller.ViewListController</servlet-class>
  </servlet>
 <servlet-mapping>
    <servlet-name>ViewList</servlet-name>
    <url-pattern>/ViewList</url-pattern>
  </servlet-mapping>
</web-app>